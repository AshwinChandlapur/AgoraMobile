<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/phase1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateElections.Phase1"
    android:background="@color/green">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/l1"
    android:layout_margin="5dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:id="@+id/card1"
    android:layout_marginBottom="20dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    app:cardBackgroundColor="@color/background_white">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
    android:layout_width="100dp"
    android:layout_margin="5dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:src="@drawable/agora"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/electionName"
            android:layout_margin="10dp"
            android:hint="Election Name"
            android:inputType="text"
            android:singleLine="true"
            android:maxLines="1"/>


        <EditText
            android:id="@+id/electionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Election Description"
            android:layout_margin="10dp"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true" />


    </LinearLayout>


    </androidx.cardview.widget.CardView>


    </LinearLayout>



</FrameLayout>