<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateElections.Phase1"
    android:background="@color/green">


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/l1"
    android:layout_margin="5dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    android:id="@+id/card1"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    app:cardBackgroundColor="@color/background_white">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
    android:layout_width="100dp"
    android:layout_margin="5dp"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:src="@drawable/agora"/>

    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <AutoCompleteTextView
    android:id="@+id/electionName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Election Name"
    android:inputType="text"
    android:maxLines="1"
    android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <AutoCompleteTextView
    android:id="@+id/electionDescription"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Election Description"
    android:inputType="text"
    android:maxLines="1"
    android:singleLine="true" />

    </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    </androidx.cardview.widget.CardView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/forwardCard1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />

    </LinearLayout>



</FrameLayout>