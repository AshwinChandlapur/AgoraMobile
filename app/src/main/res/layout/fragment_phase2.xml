<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateElections.Phase2"
    android:background="@color/green">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/l2"
        android:layout_margin="5dp"
        android:layout_gravity="center">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:id="@+id/card2"
            app:cardCornerRadius="5dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:cardBackgroundColor="@color/background_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_margin="5dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/agora"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickStartDate"
                        android:layout_weight="0.5"
                        app:layout_behavior="ru.dimorinny.floatingtextbutton.behavior.SnackbarBehavior"
                        app:floating_background_color="@color/yellow"
                        app:floating_left_icon="@drawable/ic_date_range_black_24dp"
                        app:floating_title="Pick Start Date"
                        app:floating_title_color="@android:color/white"/>

                    <EditText
                        android:id="@+id/startDateET"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:hint="Start Date"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:layout_gravity="center">

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickEndDate"
                        android:layout_weight="0.5"
                        app:layout_behavior="ru.dimorinny.floatingtextbutton.behavior.SnackbarBehavior"
                        app:floating_background_color="@color/yellow"
                        app:floating_left_icon="@drawable/ic_date_range_black_24dp"
                        app:floating_title="Pick End Date"
                        app:floating_title_color="@android:color/white"/>

                    <EditText
                        android:id="@+id/endDateET"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:hint="End Date"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        />


                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</FrameLayout>